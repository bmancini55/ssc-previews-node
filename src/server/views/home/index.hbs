<div class="row top-spacing search-form">
    <form role="form" method="get" action="/" class="col-md-6">
        <div class="form-group">
            <label for="publishers">Publishers</label>
            <select id="publishers" name="publisher" class="form-control">
                <option value=""></option>
                {{#each publishers}}
                <option value="{{_id}}" {{#ifc _id '==' ../publisher }}selected="selected"{{/ifc}}>{{Name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="writers">Writers</label>
            <select id="writers" name="writer" class="form-control">
                <option value=""></option>
                {{#each writers}}
                <option value="{{_id}}" {{#ifc _id '==' ../writer }}selected="selected"{{/ifc}}>{{FullName}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="artists">Artists</label>
            <select id="artists" name="artist" class="form-control">
                <option value=""></option>
                {{#each artists}}
                <option value="{{_id}}" {{#ifc _id '==' ../artist }}selected="selected"{{/ifc}}>{{FullName}}</option>
                {{/each}}
            </select>
        </div>
        <div>
            <input type="submit" value="Search" />
        </div>
    </form>
</div>

<div class="row item-list"> 
    {{#each items}}    
    <div class="col-sm-3 item">
        <div class="img-container">
            <img class="img-responsive" src="/public/img/item/hi-res/201505/{{StockNumber}}.jpg" />
        </div>
        <div class="contents">
            <p>{{Title}}</p>
            <p>{{Publisher.Name}}</p>            
            <p>{{Description}}</p>
        </div>
    </div>
    {{/each}}       
</div>

<div class="row">
    <nav class="col-sm-12">
        <ul class="pagination">
            <li class="{{#if items.isfirstpage }}disabled{{/if}}">
                <a href="/?page={{add items.page -1}}" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                </a>
            </li>
            <li class="{{#if items.islastpage }}disabled{{/if}}">
                <a href="/?page={{add items.page 1}}" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>